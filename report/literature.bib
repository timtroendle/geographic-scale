@thesis{Leimgruber:2018,
  langid = {german},
  title = {Schweizerisches Speicherwasserkraftpotential infolge der Erhöhungen bestehender Talsperren},
  abstract = {In a first part, this work examines the potential of Swiss storage hydropower due to dam heightening. For each dam, the feasibility of dam heightening by 5\%, 10\% and 20\% of the existing dam height is investigated. Based on the reviews of the dam heightening options, the additional storage capacity is estimated for several scenarios. With dam heightening at 23 reservoirs, the additional storage capacity is 1058 Mio m3 and the additional winter energy production amounts 3.4 TWh. Another scenario takes into account dam heightening by 20\% of the existing dam height at 30 reservoirs. The additional storage capacity amounts 1530 Mio m3 and the winter energy production can be increased by 4.8 TWh. Due to the Energy Strategy 2050, in the year 2050 the needed additional winter energy production amounts between 3 and 7.7 TWh (Piot, 2014). Dam heightening has the potential to provide a considerably part of the needed additional winter energy production. In the second part of the thesis, dam heightening at the Gries gravity dam is considered in more detail. Dam heightening alternatives, by 5\%, 10\% and 20\% of the existing dam height, are investigated. Since the inflows are not sufficient to fill the extended reservoir each year, different locations for a compensation basin are examined. From an energy-policy point of view aiming at increasing the Swiss electricity production from hydropower in winter, the alternative with the highest additional storage capacity is selected for a more detailed study. Within the development of the preliminary project, the stability of the dam, the spillway, the waterway and the compensation basin are examined in more detail. The project costs are estimated at 48 million francs. Currently dam heightening at the Griessee is not economical but would be interesting if the market situation would change.},
  date = {2018},
  author = {Leimgruber, Andrin}
}

